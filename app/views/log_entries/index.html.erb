<header>Reviews for <%= link_to(@wine.name, @wine) %></header>
<ol id="log_entries">
  <% @log_entries.each do |log_entry| %>
    <li>
      <span class="log_entry">Rating: <%= log_entry.rating %></span><br/>
      <span class="user">by <%= log_entry.name %> </span><br/>
      <span class="date">
        <%= time_ago_in_words(log_entry.created_at) %> ago
      </span><br/>
      <span class="location">at <%= log_entry.location %></span><br/>
      <span class="tasted_on">on <%= log_entry.tasted_on %></span><br/>
      <p>Comments: 
        &quot;<%= log_entry.comments %>&quot;
              </p>
    </li>
  <% end %>
</ol>

<%= link_to 'Write a Log Entry', new_wine_log_entry_path(@wine),
        remote: true,
        data: { 'update-target' => 'review_form_container' },
        class: 'btn btn-primary' %>

<div id="review_form_container"></div>